<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kotlindemo">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" /> <!-- Permission for recording audio and storage of audio in users device -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/AppTheme">
        <activity android:name=".DragandLongclickActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DragandDropActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RecorderAPPActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenudemoActivity" />

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".AlarmActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SMSActivity" />
        <activity android:name=".RecylerViewDemoActivity" />
        <activity android:name=".CustomListViewActivity" />
        <activity android:name=".CheckBoxActivity" />
        <activity android:name=".AlertBoxDemoActivity" />
        <activity android:name=".CustomToastDemoActivity" />
        <activity android:name=".ButtonDemoActivity" />
        <activity android:name=".ContactActivity" />
        <activity android:name=".TabbedActivity" />
        <activity android:name=".Main2Activity" />
        <activity android:name=".IntentDemoActivity" />
        <activity android:name=".SplashScreenActivity" />
        <activity android:name=".SpinnerActivity" />
        <activity android:name=".FactorialActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>